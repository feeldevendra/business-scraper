{
  "manifest_version": 3,
  "name": "Business Profile Scraper",
  "description": "Upload CSV with company+country → scrape Google Business Profile → export results to CSV",
  "version": "1.0",
  "permissions": [
    "scripting",
    "activeTab",
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
